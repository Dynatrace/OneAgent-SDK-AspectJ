<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
	<id>distribution</id>
	<baseDirectory></baseDirectory>
	<formats>
		<format>dir</format>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>conf</directory>
			<outputDirectory>conf</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/META-INF</directory>
			<outputDirectory>conf/META-INF</outputDirectory>
			<excludes>
				<exclude>MANIFEST.MF</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>log</directory>
			<outputDirectory>log</outputDirectory>
			<excludes>
				<exclude>*.*</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>src/assembly/client.bat</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/assembly/server.bat</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/assembly/client.sh</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/assembly/server.sh</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>/target/aspect-sdk-agent-${project.version}.jar</source>
			<outputDirectory>/</outputDirectory>
			<filtered>false</filtered>
		</file>
		<file>
			<source>../aspect-sdk-app/target/aspect-sdk-app-${project.version}.jar
			</source>
			<outputDirectory>/</outputDirectory>
			<filtered>false</filtered>
		</file>
	</files>
</assembly>